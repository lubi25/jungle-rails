<% if current_user %>
  <p>You are already logged in. <%= link_to 'Logout', '/logout', method: :delete %></p>
<% else %>
  <h1>Signup</h1>
  <%= form_for :user, url: '/users' do |f| %>
    Name: <%= f.text_field :name %>
    Email: <%= f.text_field :email %>
    Password: <%= f.password_field :password %>
    <%= f.submit "Signup" %>
  <% end %>
<% end %>